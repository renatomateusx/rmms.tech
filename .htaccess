# RMMS.cloud - Configurações de Redirecionamento e Segurança

# Forçar HTTPS - Configurações Robustas
RewriteEngine On

# Redirecionar rmms.tech para rmms.cloud (PRINCIPAL)
RewriteCond %{HTTP_HOST} ^(www\.)?rmms\.tech$ [NC]
RewriteRule ^(.*)$ https://rmms.cloud/$1 [L,R=301]

# Redirecionar www.rmms.cloud para rmms.cloud (sem www)
RewriteCond %{HTTP_HOST} ^www\.rmms\.cloud$ [NC]
RewriteRule ^(.*)$ https://rmms.cloud/$1 [L,R=301]

# Forçar HTTPS para rmms.cloud
RewriteCond %{HTTP_HOST} ^rmms\.cloud$ [NC]
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://rmms.cloud/$1 [L,R=301]

# Headers de Segurança SSL
<IfModule mod_headers.c>
    # Forçar HTTPS
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Prevenir clickjacking
    Header always append X-Frame-Options SAMEORIGIN
    
    # Prevenir MIME type sniffing
    Header always set X-Content-Type-Options nosniff
    
    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # CORS Headers para fontes
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept"
    
    # Headers específicos para fontes
    <FilesMatch "\.(woff|woff2|ttf|eot|otf)$">
        Header always set Access-Control-Allow-Origin "*"
        Header always set Access-Control-Allow-Methods "GET, OPTIONS"
        Header always set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept"
    </FilesMatch>
    
    # Content Security Policy (CSP)
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://assets.calendly.com https://cdnjs.cloudflare.com https://*.zoho.com https://*.zohopublic.com https://*.zohocdn.com https://*.zohostatic.com; script-src-elem 'self' 'unsafe-inline' https://assets.calendly.com https://cdnjs.cloudflare.com https://*.zoho.com https://*.zohopublic.com https://*.zohocdn.com https://*.zohostatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com https://*.zoho.com https://*.zohopublic.com https://*.zohocdn.com https://*.zohostatic.com; style-src-elem 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com https://*.zoho.com https://*.zohopublic.com https://*.zohocdn.com https://*.zohostatic.com; font-src *; img-src 'self' data: https:; connect-src 'self' https://calendly.com https://*.zoho.com https://*.zohopublic.com https://*.zohocdn.com https://*.zohostatic.com; frame-src 'self' https://calendly.com https://*.calendly.com; object-src 'none'; base-uri 'self'; form-action 'self';"
</IfModule>

# Configurações de Segurança
# Prevenir acesso a arquivos sensíveis
<Files ~ "\.(htaccess|htpasswd|ini|log|sh|sql|conf)$">
    Order Allow,Deny
    Deny from all
</Files>

# Prevenir listagem de diretórios
Options -Indexes

# Configurações de Cache para Performance
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imagens
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    
    # CSS e JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # HTML
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Compressão GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Configurações de Página de Erro
ErrorDocument 404 /index.html
ErrorDocument 500 /index.html

# Configurações de URL Amigável
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.html [L]

# Configurações de Cache para Navegadores
<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|webp)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "max-age=3600, public"
    </FilesMatch>
</IfModule>

# Configurações de MIME Types
<IfModule mod_mime.c>
    AddType text/css .css
    AddType application/javascript .js
    AddType image/svg+xml .svg
    AddType image/webp .webp
</IfModule>

# Configurações de Performance
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
</IfModule>

# Configurações de Logs (opcional)
# LogFormat "%h %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\"" combined
# CustomLog /var/log/apache2/rmms_cloud_access.log combined 

# Habilitar CORS para recursos externos do Zoho
<IfModule mod_headers.c>
    # Headers CORS para permitir recursos do Zoho
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
    Header always set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization, Cache-Control"
    Header always set Access-Control-Allow-Credentials "true"
    Header always set Access-Control-Max-Age "86400"
    
    # Headers específicos para fontes e recursos estáticos
    <FilesMatch "\.(woff|woff2|ttf|eot|css|js|png|jpg|jpeg|gif|ico|svg)$">
        Header set Access-Control-Allow-Origin "*"
        Header set Access-Control-Allow-Methods "GET, OPTIONS"
        Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept"
    </FilesMatch>
    
    # Headers de segurança
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Permitir recursos externos e resolver CSP
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Permitir recursos do Zoho
    RewriteCond %{HTTP_ORIGIN} ^https://(js\.zohostatic\.com|desk\.zoho\.com|salesiq\.zohopublic\.com)$ [NC]
    RewriteRule ^(.*)$ - [E=HTTP_ORIGIN:%{HTTP_ORIGIN}]
    
    # Headers para recursos específicos do Zoho
    RewriteRule ^.*$ - [E=ZOHO_RESOURCE:1]
</IfModule>

# Configurações de MIME para fontes
<IfModule mod_mime.c>
    AddType application/font-woff .woff
    AddType application/font-woff2 .woff2
    AddType application/x-font-ttf .ttf
    AddType application/x-font-eot .eot
    AddType application/vnd.ms-fontobject .eot
</IfModule>

# Cache para recursos externos
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Fontes
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/x-font-ttf "access plus 1 year"
    ExpiresByType application/x-font-eot "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
    
    # Recursos estáticos
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
</IfModule>

# Compressão para melhor performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/font-woff
    AddOutputFilterByType DEFLATE application/font-woff2
    AddOutputFilterByType DEFLATE application/x-font-ttf
    AddOutputFilterByType DEFLATE application/x-font-eot
</IfModule>

# Resolver problemas de CSP e frame-src
<IfModule mod_headers.c>
    # Permitir frames do Zoho
    Header always set Content-Security-Policy "default-src 'self' https: data:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.zoho.com https://*.zohostatic.com https://*.zohopublic.com https://calendly.com; style-src 'self' 'unsafe-inline' https: data:; font-src 'self' data: https:; img-src 'self' data: https:; connect-src 'self' https:; frame-src 'self' https://calendly.com https://*.calendly.com https://*.zoho.com https://*.zohostatic.com https://*.zohopublic.com;"
</IfModule> 